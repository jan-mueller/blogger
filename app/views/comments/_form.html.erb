<h3>Schreibe einen Kommentar</h3>

<%= form_for [ @article, @comment ] do |f| %>
  <p>
    <%= f.label :author_name, "Dein Name" %><br/>
    <%= f.text_field :author_name %>
  </p>
  <p>
    <%= f.label :body, "Dein Kommentar" %><br/>
    <%= f.text_area :body %>
  </p>
  <p>
    <%= f.submit 'Senden' %>
  </p>
<% end %>